<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="shortcut icon" href="#" />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/index.css">
    <title>Embedded Power BI report</title>
    <style>
        .image{
            max-height: 200px;
            padding: 30px 30px 0px 30px;
        }
        .main{
            margin: 0 200px 0 200px;
        }
    </style>
     <script>
        function getLink(a){
            this.href='/workspace';
        }
        function get_action(form,data) {
            console.log(data);
            // form.action = '/form_action/'+data;
        }
    </script>
</head>

<body>
    <header class="embed-container col-lg-12 col-md-12 col-sm-12 shadow">
        <p>
            Power BI Embedded Sample
        </p>
    </header>
    <main class="container">
        <br><br>
        <section id="text-container" class="main" >
            <div class="row mt-3 mb-3">
                <% for(let i=0;i< reports.length;i++){ %>
                    <div id="carddiv" class="col-4">
                        <div style="background-color: rgb(227, 224, 224); "  class="card ">
                            <img class="image" src="https://bespoke.xyz/wp-content/uploads/2020/03/Power-Bi-3-1024x1024.png" class="card-img-top" alt="...">
                            <div class="card-body">
                              <h5 class="card-title"><%= reports[i].name%></h5>
                              <a class="btn btn-primary" href="/getreport?reportid=<%= reports[i].id %>&workspaceid=<%= reports[i].workspace %>">Open Report</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
    </main>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/powerbi.min.js"></script>

</body>

</html>